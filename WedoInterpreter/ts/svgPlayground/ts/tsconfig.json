{
  "compilerOptions": {
    "outDir": "../src",
    "target": "es2017",
    "rootDir": ".",
    "module": "amd",
    "typeRoots" : ["../node_modules"],
    "types": [
      "node", "svgdotjs"
    ],
    "baseUrl": "./",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "sourceMap": true,
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015.promise"
    ],
    "paths": {
      "*.ts": ["*"]
    }
  },
  "compileOnSave": true,
  "buildOnSave": true
}